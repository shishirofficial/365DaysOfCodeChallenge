1. Min Stack
2. Remove All Adjacent Duplicates In String

class MinStack
{
     stack<pair<int,int>> st;
public:
    /** initialize your data structure here. */
  
    void push(int val)
    {
        int mins;
        if(st.empty())
        {
            mins=val;
        }
        else
        {
            mins=min(st.top().second,val);
        }
        st.push({val,mins});
    }
    
    void pop()
    {
        st.pop();
    }
    
    int top()
    {
        return st.top().first;
    }
    
    int getMin() 
    {
        return st.top().second;
    }
   
};

